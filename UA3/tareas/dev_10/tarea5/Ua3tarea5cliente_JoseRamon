package ua3tarea5cliente_joseramon;
import java.util.Scanner;
import java.net.*;
import java.io.*;

/**
 *
 * @author JRC
 */
public class Ua3tarea5cliente_JoseRamon {

    public static void main(String[] args) throws IOException {
        // TODO code application logic here
        Scanner sca=new Scanner(System.in);
        Numeros Numero;

        Socket socketCliente = new Socket("localhost", 7000);
        int numBase = sca.nextInt();
        long cuadrado=0;
        long cubo=0;

        PrintWriter envio = new PrintWriter(socketCliente.getOutputStream(), true);
        envio.println(numBase);

        System.out.println("El mensaje ha sido enviado con Ã©xito");

        String menRecibido;
        String[] array = new String[2];

        BufferedReader recibo = new BufferedReader(new InputStreamReader(socketCliente.getInputStream()));
        menRecibido = recibo.readLine();

        array = menRecibido.split(" ");

        cuadrado = Long.parseLong(array[0]);
        cubo = Long.parseLong(array[1]);
        
        Numero = new Numeros(numBase,cuadrado,cubo);
        
        System.out.println(Numero.toString());

        socketCliente.close();
        
    }
    
}
